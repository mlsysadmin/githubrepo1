apiVersion: apps/v1
kind: Deployment
metadata:
  name: myapp-deployment
  namespace: githubrepo
  labels:
    app: myapp
spec:
  replicas: 1
  progressDeadlineSeconds: 1200 
  selector:
    matchLabels:
      app: myapp
  template:
    metadata:
      labels:
        app: myapp
    spec:
      containers:
        - name: myapp-container
          image: nrt.ocir.io/nrcbpbtrtyz0/githubrepo:1.3 
          ports:
            - containerPort: 9000  
          env:
            - name: DEPLOYMENT_ENV
              value: "DEV"  
            - name: IMAGE_CREATED_BY
              value: "OCIDevOps"
      imagePullSecrets:
        - name: brokerage-secret
---
apiVersion: v1
kind: Service
metadata:
  name: k-service
  namespace: githubrepo
  labels:
    app: myapp
spec:
  type: ClusterIP
  ports:
    - port: 80
      targetPort: 9000
  selector:
    app: myapp
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: k-ingress
  namespace: githubrepo
spec:
  rules:
  - host: skiffy.mlhuillier.com  
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: k-service  
            port:
              number: 80  
